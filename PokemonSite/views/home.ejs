            <ul class="nav navbar-nav">
                <li class="active"><a href="/">Home</a></li>

            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <input type="text" class="form-control" placeholder="Search" id="search" class='search' value=''>
                </li>
            </ul>
        </div>
    </nav>
    <div>
        <!--This is the foreach i am trying to use-->



        <!-- This was a for loop example i thought might work -->


