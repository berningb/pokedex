    <table class="table table-hover" id="landing_table">
        <thead>
            <tr>
                <th class="title">#</th>
                <th class="title">Sprite</th>
                <th class="title">Name</th>
                <th class="title">Type</th>
            </tr>
        </thead>
        <tbody id="tableRows">
            <% for(var i=0; i < monArr.length; i++) { %>
                <tr id="poke<%= monArr[i].id %>" class="monster" onclick="location.href='monster/<%= monArr[i].id %>'">
                    <td class="number">
                        <p class="monNum"><%= monArr[i].number %></p>
                    </td>
                    <td class = "parent"><img class = "monImg child" src="images/sprites/<%= monArr[i].id %>.gif"></td>
                    <td class="name">
                        <p id = "<%= monArr[i].name %>" class = "monName"><%= monArr[i].name %></p>
                    </td>
                    <td>
                        <div class="type type1 <%= monArr[i].type1%>">
                            <%= monArr[i].type1%>
                        </div>
                        <div class="type type2 <%= monArr[i].type2 %>">
                            <%= monArr[i].type2 %>
                        </div>
                    </td>
                </tr>
                <% } %>
        </tbody>
    </table>


    <section ng-controller="mainController">
        <article ng-view>

        </article>
    </section>

    <script src="scripts/myscript.js"></script>

</body>

</html>